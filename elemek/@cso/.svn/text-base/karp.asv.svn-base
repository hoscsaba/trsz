function out = karp(cso,dt,dtmin)

if dt<0
  if abs(dt)<dtmin;
    dt=abs(dt);
  else
    disp(dt);
    error('Nagy a baj...');
  end
end

x_interp=cso.L-dt*cso.dx;
p=interp1(cso.x,cso.p,x_interp); 
v=interp1(cso.x,cso.v,x_interp); 
dzdx=cso.dzdx(cso.N);
ro = cso.tranziens_agelem_2csp.ro;  

if isnan(v)
    fprintf('\n\n')
    disp(cso.x);
    disp(cso.v);
    disp(cso.a*dt);
    error('PÁNIK!!!')
end

val1=p+ro*cso.a*v;
val2= - dt*( ro*cso.a*9.81*dzdx + ro*cso.a*cso.lambda/2/cso.D*v*abs(v));
val=val1+val2;

if isnan([val1,val2])
    fprintf('\n\n-------------------------------------');
    fprintf('\n  val1=%g  val1=%g');
    fprintf('\n-------------------------------------\n\n');
    error('Pánik indul....')
end

out=[1,  ro*cso.a/cso.A, val,  ro, val, p, v, val1, val2];

fprintf('\n %s csõ állapota:\n',cso.tranziens_agelem_2csp.nev);
disp([cso.x; cso.p/1e5; cso.v]);
fprintf('\n Ide kell C+ mentén interpolálni: dt=%g  cso.dt=%g  cso.dx=%g  cso.a=%g  x=%g,  p=%g,  v=%g\n',dt,cso.dt,cso.dx,cso.a,x_interp,p/1e5,v);
pause